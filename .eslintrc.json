{
    "env": {
        "browser": true,
        "es2021": true, 
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-trailing-spaces": "error", 
        "no-magic-numbers": ["error", { "ignore": [0,1] }],
        "camelcase": "error",
        "no-console": "error", 
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"]
    }
}
